{
  "name": "brotherhood-kos-worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "esbuild src/server.js --bundle --outfile=dist/server.js --platform=node --target=node22 --format=esm --sourcemap",
    "build:worker": "esbuild src/worker.js --bundle --outfile=dist/worker.js --platform=browser --target=es2020 --minify",
    "dev": "wrangler dev",
    "start": "node dist/server.js",
    "start:web": "node src/bot/index.js & node src/server.js",
    "start:doppler": "doppler run -- npm run start:web",
    "deploy-commands:doppler": "doppler run -- node src/bot/deploy-commands.js",
    "set-admin:doppler": "doppler run -- node scripts/set-admin-password.js",
    "api-deploy:doppler": "doppler run -- wrangler deploy"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.0.0",
    "discord.js": "^14.11.0",
    "dotenv": "^17.2.3",
    "ms": "^2.1.3",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "wrangler": "^4.45.3"
  }
}