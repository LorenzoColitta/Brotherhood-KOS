{
  "name": "brotherhood-kos",
  "version": "1.0.0",
  "description": "KOS (Kill On Sight) system for the Brotherhood Discord server",
  "main": "src/bot/index.js",
  "type": "module",
  "scripts": {
    "prestart": "command -v doppler >/dev/null 2>&1 || (curl -Ls --tlsv1.2 --proto '=https' --retry 3 https://cli.doppler.com/install.sh | sh || true)",
    "start": "node src/bot/index.js",
    "start:api": "node src/api/server.js",
    "deploy-commands": "node src/bot/deploy-commands.js",
    "set-admin-password": "node scripts/set-admin-password.js",
    "start:doppler": "doppler run -- node src/bot/index.js",
    "start:api:doppler": "doppler run -- node src/api/server.js",
    "deploy-commands:doppler": "doppler run -- node src/bot/deploy-commands.js",
    "set-admin:doppler": "doppler run -- node scripts/set-admin-password.js",
    "api-deploy:doppler": "doppler run -- wrangler deploy"
  },
  "keywords": [
    "discord",
    "bot",
    "kos",
    "supabase"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "ms": "^2.1.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "wrangler": "^4.45.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
